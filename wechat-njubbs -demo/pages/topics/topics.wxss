@import "../switchzone/switchzone.wxss";
@import "/wxSearch/wxSearch.wxss";

.Search-zone {
  align-items: left;
}

.topics {
  height: 100%;
  overflow: hidden;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/*导航 nav*/

.top-bar {
  display: flex;
  border-bottom: 1px solid #eee;
}

.top-bar-item {
  display: block;
  width: 83px;
  padding: 10px;
  margin: auto;
  border: none;
  text-align: center;
  background: #fff;
  border-radius: 0px;
  font-size: 14px;
  line-height: 1.4;
}

.top-bar-item::after {
  height: 0;
  width: 0;
}

.top-bar-active {
  border-bottom: 2px solid #80bd01;
  color: #80bd01;
  font-weight: bold;
}


/*列表 list*/

.scroll-posts-list {
  overflow: auto;
  margin-top: 0rpx;
  background-image: url("http://bbs.nju.edu.cn/download/images/back.gif");
  height: 100%;
}

.posts-list {
  position: relative;
  overflow: hidden;
  padding: 0 15rpx;
  border-bottom: 1rpx solid #80bd01;
}

.posts-list-info {
  overflow: hidden;
  display: flex;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.posts-list-info .userimg {
  position: relative;
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 0rpx;
  vertical-align: middle;
}

.posts-list-info .item-box {
  flex: 1;
  margin-left: 30rpx;
}

.posts-list-info .item-box .userinfo {
  display: flex;
  font-size: 30rpx;
  color: #353535;
}

.posts-list-info .item-box .userinfo .username,
.posts-list-info .item-box .userinfo .time {
  flex: 1;
}

.posts-list-info .item-box .userinfo .time {
  text-align: right;
  color: #555;
}

