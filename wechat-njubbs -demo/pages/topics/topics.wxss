.posts-list-info .item-box  .posts-tag {
  display: inline-block;
  width: 80rpx;
  height: 38rpx;
  text-align: center;
  line-height: 38rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #80bd01;
  border: 1rpx solid #80bd01;
}

.posts-list-info .item-box .hot {
  color: red;
  border: 1rpx solid red;
}

.posts-list-info image {
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.posts-list .bar-info .bar-info-item {
  display: inline-block;
  line-height: 66rpx;
}

.posts-list .bar-info .bar-info-item-icon {
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}

.posts-list .bar-info .bar-info-item-number {
  display: inline-block;
  vertical-align: middle;
}

.posts-list .bar-info .bar-info-item2 {
  display: inline-block;
  float: right;
  line-height: 66rpx;
}

.posts-list .bar-info .bar-info-item2 .bar-info-item-number {
  color: #80bd01;
}

/*loading*/

.loading-font {
  font-size: 30rpx;
}

.hidden {
  display: none;
}

.header {
  width: 100%;
  height: 200px;
  background-color: #80bd01;
}

.search-area {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  align-content: stretch;
  margin: 0 15px;
}

.search-words {
  width: 75%;
  height: 38px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px 0px 0px 4px;
  padding-left: 10px;
}

.search-btn {
  flex: 1;
  height: 40px;
  color: #f6f6f6;
  background-color: #fcb338;
  line-height: 38px;
  font-size: 16px;
  border-radius: 0px 4px 4px 0px;
}

.white-box {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.hot {
  min-height: 140px;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 15px 0;
}

.hot-words {
  display: block;
  margin: 0 15px;
}

.hot-word {
  float: left;
  margin-right: 5px;
  margin-bottom: 5px;
  padding: 0 14px !important;
}

.title-item{
    margin-top: 15rpx;
  margin-bottom: 5rpx;
  font-size: 32rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
text-align: left;
  padding: 10px;
  margin: auto;
  border: none;
  background: transparent;
  line-height: 1.4;
  position:inherit;
}